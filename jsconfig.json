{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "checkJs": true,
    "sourceMap": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "api/**/*.js",
    "config/**/*.js",
    "tasks/**/*.js",
  ],
  "exclude": [
    "node_modules",
  ]
}